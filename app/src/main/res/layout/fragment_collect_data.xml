<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_measure_point"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center_horizontal"
        android:text="CollectDataFragment"
        android:textColor="@color/amber_primary" />

    <EditText
        android:id="@+id/et_test1"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginLeft="28dp"
        android:layout_marginRight="28dp"
        android:layout_marginTop="23dp"
        android:background="@drawable/edit_style"
        android:hint="Data"
        android:textColor="@color/color_light_blue"
        android:textColorHint="#00ce9b"
        android:textCursorDrawable="@null"
        android:textSize="15sp" />
    <EditText
        android:id="@+id/et_test2"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginLeft="28dp"
        android:layout_marginRight="28dp"
        android:layout_marginTop="23dp"
        android:background="@drawable/edit_style"
        android:hint="data"
        android:textColor="@color/color_light_blue"
        android:textColorHint="#00ce9b"
        android:textCursorDrawable="@null"
        android:textSize="15sp" />

    <com.lyqdhgo.environment.weight.WaterRipplesView
        android:id="@+id/wave"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        app:waveColor="#00ce9b"
        app:waveCount="5"
        app:waveOnLoad="true" />

    <Button
        android:id="@+id/but_breath"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:text="Breath" />
    <Button
        android:id="@+id/but_query"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:text="Breath" />
</LinearLayout>
